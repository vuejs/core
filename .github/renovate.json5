{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:recommended', 'schedule:weekly', 'group:allNonMajor'],
  labels: ['dependencies'],
  ignorePaths: ['**/__tests__/**'],
  rangeStrategy: 'bump',
  packageRules: [
    {
      matchDepTypes: ['peerDependencies'],
      enabled: false,
    },
    {
      groupName: 'test',
      matchPackageNames: ['vitest', 'jsdom', 'puppeteer', '@vitest{/,}**'],
    },
    {
      groupName: 'playground',
      matchFileNames: [
        'packages-private/sfc-playground/package.json',
        'packages-private/template-explorer/package.json',
      ],
    },
    {
      groupName: 'compiler',
      matchPackageNames: ['magic-string', '@babel{/,}**', 'postcss{/,}**'],
    },
    {
      groupName: 'build',
      matchPackageNames: [
        'vite',
        'rolldown{/,}**',
        '@rolldown{/,}**',
        'oxc{/,}**',
        '@vitejs{/,}**',
      ],
    },
    {
      groupName: 'lint',
      matchPackageNames: [
        'simple-git-hooks',
        'lint-staged',
        'oxlint',
        'oxfmt{/,}**',
      ],
    },
  ],
  ignoreDeps: [
    'vue',

    // manually bumping
    'node',
    'typescript',

    // ESM only
    'estree-walker',

    // pinned
    // https://github.com/vuejs/core/issues/10300#issuecomment-1940855364
    'lru-cache',

    // pinned
    // only used in example for e2e tests
    'marked',
  ],
}
